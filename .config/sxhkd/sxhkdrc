# terminal emulator
alt + Return
	kitty

# program launcher
alt + space
	sh $HOME/.config/rofi/bin/launcher

alt + x
	sh $HOME/.config/rofi/bin/powermenu

ctrl + alt + l
	betterlockscreen --lock

XF86Audio{RaiseVolume,LowerVolume}
	amixer sset Master {5%+, 5%-}

# Brighness control
XF86MonBrightness{Up,Down}
	xbacklight{ -inc 10, -dec 10}

# quit/restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}

# close application
alt + shift + q
	bspc node -c

# swap the current node and the biggest window
alt + g
	bspc node -s biggest.window

# Pseudotile toggle
alt + shift + s
    bspc node -t "~"{pseudo_tiled,tiled}

# Toggle floating windows
alt + a
	bspc node -t "~"{floating,tiled}

# Switch workspace or Send focused Node to another workspace
alt + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}' '--follow'

# Change focus of the Node or Swap Nodes
alt + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
